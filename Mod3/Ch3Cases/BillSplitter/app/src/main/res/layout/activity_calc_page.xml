<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calc_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bthatcherbm.billsplitter.CalcPage"
    android:background="@android:color/darker_gray">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:ems="10"
                android:id="@+id/billText"
                android:hint="@string/billHint"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:background="@android:color/background_light" />

            <TextView
                android:text="@string/billHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:paddingLeft="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:ems="10"
                android:id="@+id/peopleText"
                android:inputType="number"
                android:hint="@string/peopleHint"
                android:textAlignment="center"
                android:background="@android:color/background_light" />

            <TextView
                android:text="@string/peopleHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:paddingLeft="10sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp">

            <Spinner
                android:layout_width="match_parent"
                android:id="@+id/qualitySpin"
                android:entries="@array/quality"
                android:layout_height="40sp"
                android:background="@android:color/background_light"
                android:textAlignment="center" />

            <TextView
                android:text="@string/service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:paddingLeft="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:padding="5sp">

            <EditText
                android:layout_width="match_parent"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/tipTxt"
                android:background="@android:color/background_light"
                android:clickable="false"
                android:editable="false"
                android:layout_height="60sp"
                android:paddingLeft="5sp"
                android:textSize="14sp" />

            <TextView
                android:text="@string/tipHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:padding="10sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp">

            <Button
                android:text="@string/calctip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/calcBtn" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
