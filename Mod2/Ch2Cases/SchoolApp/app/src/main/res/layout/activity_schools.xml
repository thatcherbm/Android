<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thatcherbm.schoolapp.Schools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datc"
        android:id="@+id/schoolTitle"
        android:textSize="34sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:id="@+id/schoolImage"
        android:background="@drawable/datc_rotunda"
        android:maxHeight="20dp"
        android:contentDescription="@string/picture_of_the_datc_rotunda"
        android:layout_below="@+id/schoolTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        android:id="@+id/infoButton"
        android:layout_below="@+id/schoolImage"
        android:layout_toEndOf="@+id/schoolTitle"
        android:layout_marginTop="47dp" />
</RelativeLayout>
